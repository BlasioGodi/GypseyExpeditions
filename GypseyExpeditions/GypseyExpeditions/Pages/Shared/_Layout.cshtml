@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment
@{
    ViewData["Context"] = "@context";
    ViewData["Type"] = "@type";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Google tag (gtag.js) -->
    <script defer></script>
    <script></script>

    <!--Schema-->
    <script type="application/ld+json">
{
    "@ViewData["Context"]": "http://schema.org",
    "@ViewData["Type"]": "LocalBusiness",
    "name": "Gypsey Expeditions",
    "image": "https://gypseyexpeditions/lib/src/project/Image-6.webp",
    "url":"https://gypseyexpeditions.com",
    "telephone": "+254 (724) 822 582",
    "email": "info@gypseyexpeditions.com",
    "address": {
      "@ViewData["Type"]": "PostalAddress",
      "streetAddress": "Kikuyu",
      "addressRegion": "Nairobi",
      "addressCountry": "Kenya"
    }
  }</script>

    <!-- Title -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="Content-Security-Policy" content="<directive><value>;<directive><value>" />
    <meta http-equiv="cache-control" content="max-age=31536000, public" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>GypseyExpeditions | @ViewData["Title"]</title>
    <link rel="canonical" href="https://gypseyexpeditions.com">

    <!--MetaData-->
    <meta property="og:url" content="https://gypseyexpeditions.com">
    <meta property="og:site_name" content="Gypsey Expeditions">
    <meta name="theme-color" content="">
    <meta name="author" content="Gypsey Expeditions">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="Website">

    @RenderSection("MetaTags", required: false)

    <!-- Favicons - To be adjusted -->
    <link rel="shortcut icon" sizes="32x32" width="32px" height="32px" href="~/lib/src/logos/Gypsey-32.png" />
    <link rel="apple-touch-icon" sizes="32x32" width="32px" height="32px" href="~/lib/src/logos/Gypsey-32.png" />
    <link rel="apple-touch icon" sizes="76x76" width="76px" height="76px" href="~/lib/src/logos/Gypsey-76.png" />
    <link rel="apple-touch-icon" sizes="120x120" width="120px" height="120px" href="~/lib/src/logos/Gypsey-120.png" />

    <!--Main Styles-->
    <link href="~/css/bootstrap_custom.css" rel="stylesheet" />
    <link href="~/css/icon/et-line-font.css" rel="stylesheet" />
    <!--Font Styles-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&family=Salsa&display=swap" rel="stylesheet">
    <!-- Owl Carousel Stylesheet -->
    <link href="~/node_modules/owl.carousel/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/node_modules/owl.carousel/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <!-- Animation Stylesheet -->
    <link rel="stylesheet" href="~/css/animate.css" />
    <!--Swiper Stylesheet-->
    <link href="~/node_modules/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <!--Image Gallery Stylesheet-->
    <link href="~/css/image-carousel.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @await Html.PartialAsync("_Header", new GypseyExpeditions.Controllers._HeaderModel(new Services.PopularToursService(WebHostEnvironment)))
    <div class="layout">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Overlay for faded background -->
    <div id="overlay"></div>
    @await Html.PartialAsync("_Footer", new GypseyExpeditions.Controllers._FooterModel(new Services.PopularToursService(WebHostEnvironment)))

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/node_modules/jquery/dist/jquery.sticky.js"></script>
    <script src="~/js/jquery.appear.js"></script>

    <!--Owl Carousel JS-->
    <script src="~/node_modules/owl.carousel/dist/owl.carousel.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>